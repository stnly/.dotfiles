! Xft settings ---------------------------------------------------------------

Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintslight

!-------------------------------------------------------------------------------
!
!	U R X V T - Settings
!
URxvt*geometry:					79x21
URxvt*foreground:				grey60
URxvt*borderLess:				false
URxvt*depth:					32
!URxvt*background:				rgba:0000/0000/0000/dddd
URxvt*scrollBar_right:				true
URxvt*font:					xft:Inconsolata-medium:size=12
URxvt*cursorBlink:				true
URxvt*cursorUnderline:				true
URxvt*scrollColor:				#111111
URxvt*perl-ext-common:				default,clipboard
URxvt*saveLines: 				12000

!Black Background
urxvt*depth: 320
!Semi-Transparent Background
!urxvt*depth:32
urxvt*background: rgba:0000/0000/0000/8000

!colors
!black
*color0:      #666666
*color8:      #888888
!red
*color1:      #ff8278
*color9:      #ff8278
!green
*color2:      #bde077
*color10:     #bde077
!yellow
*color3:      #eadc84
*color11:     #eadc84
!blue
*color4:      #77bee0
*color12:     #77bee0
!magenta
*color5:      #dd91f3
*color13:     #dd91f3
!cyan
*color6:      #ffc178
*color14:     #ffc178
!white
*color7:      #dddddd
*color15:     #cccccc
